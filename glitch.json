{
  "install": "npm install",
  "start": "node server.js",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^server\\.js$",
        "^public/"
      ],
      "exclude": [
        "^public/assets/"
      ]
    },
    "throttle": 1000
  }
}
